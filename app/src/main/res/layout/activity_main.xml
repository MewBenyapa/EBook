<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.bookstore.list.MainActivity">




        <EditText
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="#ffffff"
            android:background="#000000"
            android:hint="@string/placeholder"
            android:textColorHint="#c0c0c0c0"
            />


    <RadioGroup
        android:id="@+id/sort_radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:checkedButton="@+id/title"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_below="@+id/search">

        <TextView
            android:id="@+id/sort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_weight="1"

            android:paddingTop="12dp"
            android:text="Sort By :" />

        <RadioButton
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="#000000"
            android:text="@string/radio_title"
            android:onClick="radioSort"/>

        <RadioButton
            android:id="@+id/publish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_weight="1"
            android:buttonTint="#000000"
            android:text="@string/radio_pub"
            android:onClick="radioSort"/>

    </RadioGroup>


    <Button
        android:id="@+id/btn_search_by_title"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sort_radioGroup"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="#000000"
        android:text="@string/search_title"
        android:textColor="#ffffff"
        android:onClick="search"
        />

    <Button
        android:id="@+id/btn_search_by_year"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sort_radioGroup"

        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="#000000"
        android:layout_toEndOf="@+id/btn_search_by_title"
        android:text="@string/search_year"
        android:textColor="#ffffff"
        android:onClick="search"
        />

    <GridView
        android:id="@+id/book_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnWidth="120dp"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:gravity="center"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/btn_search_by_year"/>

    <!--<ListView-->
        <!--android:id="@+id/list_books"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"></ListView>-->



</RelativeLayout>
