<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:id="@+id/img_photo"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="#000000"
        android:padding="3dp"
        />

    <TextView
        android:id="@+id/bookNameDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="19dp"
        android:text="Book name"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/img_photo" />

    <TextView
        android:id="@+id/bookPubDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book pub"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/bookNameDetail"
        android:layout_alignStart="@+id/bookNameDetail" />

    <TextView
        android:id="@+id/price_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/bookPubDetail"
        android:layout_below="@+id/bookPubDetail"
        android:layout_marginTop="13dp"
        android:text="price"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/add_cart"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="21dp"
        android:background="#000000"
        android:text="Add to cart"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_below="@+id/img_photo"
        android:layout_alignParentStart="true" />


</RelativeLayout>